{
  "name": "dwellu-server",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "start": "moleculer-runner --config dist/moleculer.config.js dist/services/**/*.service.js",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "prepare": "npm run build",
    "prettier:base": "prettier --parser typescript",
    "prettier:fix": "npm run prettier:base -- --write \"services/**/*.{ts,tsx}\"",
    "prettier:fixMixin": "npm run prettier:base -- --write \"mixins/**/*.{ts,tsx}\"",
    "prettier:fixStorage": "npm run prettier:base -- --write \"storage/**/*.{ts,tsx}\"",
    "prettier:check": "prettier --check"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "husky": "^7.0.4",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "moleculer-repl": "^0.7.0",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1"
  },
  "dependencies": {
    "@types/jest": "^25.1.4",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.9.8",
    "apple-signin-auth": "^1.7.4",
    "aws-sdk": "^2.1057.0",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "google-auth-library": "^7.10.2",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.34",
    "moleculer": "^0.14.0",
    "moleculer-db": "^0.8.17",
    "moleculer-db-adapter-mongo": "^0.4.14",
    "moleculer-http-client": "^0.4.2",
    "moleculer-io": "^2.0.0",
    "moleculer-mail": "^1.2.5",
    "moleculer-web": "^0.9.0",
    "nats": "^1.3.2",
    "prettier": "^2.4.1",
    "randomstring": "^1.2.1",
    "select-philippines-address": "^1.0.5",
    "typescript": "^3.8.3",
    "verify-apple-id-token": "^2.2.0"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
